<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="SpringLocal" xmlns="http://ws.apache.org/ns/synapse">
    <http method="post" statistics="enable" trace="enable" uri-template="http://localhost:8090/test/iso">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
